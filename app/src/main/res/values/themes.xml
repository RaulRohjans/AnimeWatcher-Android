<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AnimeWatcher" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/anime_orange</item>
        <item name="colorPrimaryVariant">@color/dark_anime_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_anime_orange</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="tc">@color/black</item>
        <item name="bgc">@color/edit_text_background</item>

        <item name="Altbgc">@color/white</item>
        <item name="animewatcher_small_logo">@drawable/ic_logo_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="collapsedToolbarLayoutTitleColor" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/seguisb</item>
    </style>

    <style name="expandedToolbarLayoutTitleColor" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/seguisb</item>
    </style>

</resources>