<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/crv_home_episode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:clipToPadding="false"
        app:cardCornerRadius="10dp"
        android:layout_centerHorizontal="true"
        app:cardElevation="10dp"
        android:layout_margin="16dp">

        <RelativeLayout
            android:layout_width="490px"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_home_episode_cover"
                android:layout_width="490px"
                android:layout_height="275px"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/lbl_home_episode_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_home_episode_cover"
                android:layout_marginTop="10dp"
                android:textAlignment="textStart"
                android:fontFamily="@font/segoeb"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/lbl_home_episode_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_home_episode_number"
                android:textAlignment="textStart"
                android:fontFamily="@font/seguisb"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="12sp" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>