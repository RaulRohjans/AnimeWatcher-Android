<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">

    <RelativeLayout
        android:id="@+id/topnav_change_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/anime_gray"
        android:padding="6dp" >

        <ImageView
            android:id="@+id/topnav_change_user_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_topnav_change_user_title"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="22sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topnav_change_user">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="50dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp" >

                <EditText
                    android:id="@+id/txt_change_username"
                    android:drawableEnd="@drawable/ic_baseline_person_outline_24"
                    android:drawableTint="?attr/tc"
                    android:hint="@string/hint_login_username"
                    android:inputType="text"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/edit_text"/>

                <EditText
                    android:id="@+id/txt_change_first_name"
                    android:drawableEnd="@drawable/ic_baseline_person_outline_24"
                    android:drawableTint="?attr/tc"
                    android:hint="@string/lbl_hint_first_name"
                    android:inputType="text"
                    android:layout_marginTop="16dp"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/edit_text" />

                <EditText
                    android:id="@+id/txt_change_last_name"
                    android:drawableEnd="@drawable/ic_baseline_person_outline_24"
                    android:drawableTint="?attr/tc"
                    android:hint="@string/lbl_hint_last_name"
                    android:inputType="text"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/edit_text" />

                <Button
                    android:id="@+id/btn_save_user_changes"
                    android:layout_marginTop="64dp"
                    android:background="@drawable/button"
                    android:text="@string/lbl_btn_save"
                    android:textAllCaps="false"
                    android:paddingEnd="48dp"
                    android:paddingStart="48dp"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/seguisb"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>