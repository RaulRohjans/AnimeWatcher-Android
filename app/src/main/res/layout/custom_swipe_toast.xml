<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_swipe_toast">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:clipToPadding="false"
        app:cardCornerRadius="14dp"
        android:layout_centerHorizontal="true"
        app:cardElevation="10dp"
        android:layout_margin="6dp"
        android:background="?attr/Altbgc">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginStart="16dp"
                android:id="@+id/custom_swipe_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/custom_swipe_toast_img"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:fontFamily="@font/seguisb"
                android:text="@string/str_swipe_toast" />

            <ImageView
                android:layout_margin="16dp"
                android:id="@+id/custom_swipe_toast_img"
                android:src="@drawable/swipe_right_24_black"
                android:layout_alignParentRight="true"
                android:layout_width="32dp"
                android:layout_height="32dp" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>